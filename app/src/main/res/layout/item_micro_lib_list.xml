<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_normal_height"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_normal_height"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="13"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_date"
                    android:layout_centerHorizontal="true"
                    android:text="May"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/view_small_space"
            android:layout_marginTop="@dimen/view_small_space"
            android:background="@color/colorLineDivider" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_small_space"
            android:paddingRight="@dimen/view_normal_space"
            android:text="行列式的基本运算" />
    </LinearLayout>

    <View style="@style/LineStyle" />

</RelativeLayout>