<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/iv_shop_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginLeft="@dimen/view_normal_space"
        android:background="@color/colorWindowBackground" />

    <TextView
        android:id="@+id/tv_shop_name"
        style="@style/DefaultTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_shop_pic"
        android:layout_marginLeft="@dimen/view_normal_space"
        android:layout_toRightOf="@id/iv_shop_pic"
        android:text="店铺名称" />

    <TextView
        android:id="@+id/tv_area"
        style="@style/DefaultTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginLeft="@dimen/view_normal_space"
        android:layout_marginTop="@dimen/view_small_space"
        android:layout_toRightOf="@id/iv_shop_pic"
        android:text="区域" />

    <Button
        android:id="@+id/btn_share_link"
        style="@style/DefaultTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_normal_height"
        android:layout_alignBottom="@id/iv_shop_pic"
        android:layout_marginLeft="@dimen/view_normal_space"
        android:layout_toRightOf="@id/iv_shop_pic"
        android:background="@color/light_cyan"
        android:paddingLeft="@dimen/view_normal_space"
        android:paddingRight="@dimen/view_normal_space"
        android:text="@string/share_links_to_get_money"
        android:textColor="@android:color/white" />

    <View
        style="@style/LineStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:elevation="@dimen/view_min_dimen" />

</RelativeLayout>